<h1>会員一覧</h1>

<div>
  <table>

    <thead>
      <tr>
        <td>
          <h2>会員ID</h2>
        </td>
        <td>
          <h2>氏名</h2>
        </td>
        <td>
          <h2>メールアドレス</h2>
        </td>
        <td>
          <h2>ステータス</h2>
        </td>
      </tr>
    </thead>

    <% @customers.each do |f| %>
    <tbody>
      <tr>
        <td>
          <%= f.id %>
        </td>
        <td>
          <%= link_to admin_customer_path(f.id) do %>
            <%= f.last_name %>
            <%= f.first_name %>
          <% end %>
        </td>
        <td>
          <%= f.email %>
        </td>
        <td>
          <% if f.is_active == true %>
            <%=  '有効'   %>
          <%else%>
            <%=  '退会'  %>
          <%end%>
        </td>
      </tr>
    </tbody>
    <% end %>

  </table>
</div>

<div>
  <%= paginate @customers %>
</div>