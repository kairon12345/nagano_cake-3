<div>
  <h1>
    <%=@customer.last_name %><%= @customer.first_name %>
    <p>さんの会員情報編集</p>
  </h1>
</div>

<%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
  <table>
    <tbody>
      <tr>
        <td><p>会員ID</p></td>
        <td><%=@customer.id%></td>
      </tr>
      <tr>
        <td><%= f.label :last_name,'氏名' %></td>
        <td><%=f.text_field :last_name %></td>
        <td><%=f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :last_name_kana,'フリガナ' %></td>
        <td><%=f.text_field :last_name_kana %></td>
        <td><%=f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code,'郵便番号' %></td>
        <td><%=f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :address,'郵便番号' %></td>
        <td><%=f.text_field :address %></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number,'電話番号' %></td>
        <td><%=f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%= f.label :email ,'メールアドレス' %></td>
        <td><%=f.text_field :email%></td>
      </tr>
      <tr>
        <td><%= f.label :is_active, "会員ステータス" %></td>
        <td>
          <%=f.label :is_active, "有効"%>
          <%= f.radio_button :is_active, true %>
          <%=f.label :is_active, "退会"%>
          <%= f.radio_button :is_active, false %>
        </td>
      </tr>

      <div>
        <%= f.submit '変更を保存' %>
      </div>

    </tbody>
  </table>
<% end %>