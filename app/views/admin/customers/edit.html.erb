<div>
  <h1>
    <%=@customer.last_name %><%= @customer.first_name %>
    <p>さんの会員情報編集</p>
  </h1>
  <table>
    <tbody>
      <tr>
        <td><p>会員ID</p></td>
        <td><%=@customer.id%></td>
      </tr>
      <%= form_with model: @customer, url: admin_customer_path(@customer), local: true do |f| %>
      <tr>
        <td><%= f.label :last_name,'氏名' %></td>
        <td><%=f.text_field :last_name %></td>
        <td><%=f.text_field :first_name %></td>
      </tr>
      <tr>
        <td><%= f.label :last_name_kana,'フリガナ' %></td>
        <td><%=f.text_field :last_name_kana %></td>
        <td><%=f.text_field :first_name_kana %></td>
      </tr>
      <tr>
        <td><%= f.label :postal_code,'郵便番号' %></td>
        <td><%=f.text_field :postal_code %></td>
      </tr>
      <tr>
        <td><%= f.label :address,'郵便番号' %></td>
        <td><%=f.text_field :address %></td>
      </tr>
      <tr>
        <td><%= f.label :telephone_number,'電話番号' %></td>
        <td><%=f.text_field :telephone_number %></td>
      </tr>
      <tr>
        <td><%= f.label :email ,'メールアドレス' %></td>
        <td><%=f.text_field :email%></td>
      </tr>
      <tr>
        <td></td>
        <td></td>
      </tr>
      <%= f.submit '変更を保存' %>
      <% end %>
    </tbody>
  </table>
</div>