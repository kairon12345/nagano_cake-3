
  <h1>商品一覧</h1>

<div>
  <% @items.each do |f| %>
    <%= f.id %>

    <%= link_to admin_item_path(f.id) do %>
      <%= f.name %>
    <%end%>

    <%= f.price %>
    <%= f.genre.name %>

    <% if f.is_active == "now" %>
      <%=  '販売中'   %>
    <%else%>
      <%=  '販売停止中'  %>
    <%end%>

  <% end %>
</div>

<div>
  <%= paginate @items %>
</div>