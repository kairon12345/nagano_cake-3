<h1>商品詳細</h1>

<div>
<% if @item.image.attached? %>
  <%= image_tag @item.image %>
<% else %>
  <%=  image_tag ("/default_user.jpg") %>
<% end %>
</div>

<div>
  <%= @item.name %>
  <%= @item.price %>
  <%= @item.introduction %>
  <% if @item.is_active %>
    <%=  '販売中'   %>
  <%else%>
      <%=  '販売停止中'  %>
  <%end%>
  <%= link_to  '編集する', edit_admin_item_path %>
</div>