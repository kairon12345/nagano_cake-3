<h1>ショッピングカート</h1>
<%= link_to "カートを空にする",  cart_items_destroy_all_path, method: :delete  %>
<table>
  <thead>
    <tr>
      <th>商品名</th>
      <th>単価(税込)</th>
      <th>数量</th>
      <th>小計</th>
    </tr>
  </thead>
  <tbody>

  <% @cart_items.each do |cart_item| %>
    <tr>
        <td>
          <%= cart_item.item.name %>
        </td>
        <td>
          <%= cart_item.item.with_tax_price %>
        </td>
        <td>
          <%= form_with model: cart_item, url: cart_item_path(cart_item.id), method: :patch ,local: true do |f| %>
            <%= f.select :amount ,  *[1..10] %>
            <%= f.submit "変更" %>
          <% end %>
        </td>
        <td>
          <%= cart_item.subtotal %>
        </td>
        <td>
          <%= link_to "削除する", cart_item_path(cart_item.id), method: :delete %>
        </td>
        <% @total = @total+(cart_item.item.price * 1.1).floor * cart_item.amount %>
    </tr>
  <% end %>
</tbody>
</table>
<%= @total %>