<div>
  <table>
    <tbody>
      <tr>
        <th>ジャンル検索</th>
      </tr>
      <% @genres.each do |genre| %>
        <tr>
          <td>
            <%= genre.name %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div>
  <h1>商品一覧</h1>
  <% @items.each do |item| %>
    <% if item.image.attached? %>
      <%= image_tag item.image %>
    <% else %>
      <%=  image_tag ("/default_user.jpg") %>
    <% end %>

    <%= link_to item_path(item.id) do %>
      <%= item.name %>
    <%end%>

    <%= item.price %>
  <% end %>
</div>