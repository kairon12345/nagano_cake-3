<h1>配送先登録/一覧</h1>

<div>
  <table>
  <%= form_with model:@address, url: addresses_path,local: true do |f| %>
  <tr>
    <td>郵便番号(ハイフンなし)</td>
    <td><%= f.text_field :postal_code%></td>
  </tr>
  <tr>
    <td>住所</td>
    <td><%= f.text_field :address%></td>
  </tr>
  <tr>
    <td>宛名</td>
    <td><%= f.text_field :name%></td>
  </tr>
  <%= f.submit "新規登録" %>
  <% end %>
  </table>
</div>

<div>
  <table>
  <thead>
    <tr>
      <th>郵便番号</th>
      <th>住所</th>
      <th>宛名</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @addresses.each  do |f|%>
    <tr>
      <td>
        <%= f.postal_code %>
      </td>
      <td>
        <%= f.address %>
      </td>
      <td>
        <%= f.name %>
      </td>
      <td>
        <%= link_to "編集する" , edit_address_path(f.id) %>
        <%= link_to "削除する", address_path(f.id) , method: :delete  %>
      </td>
    </tr>
    <% end %>
  </tbody>
  </table>
</div>